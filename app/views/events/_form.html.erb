<%= form_for(event) do |f| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :event_name %>
    <%= f.text_field :event_name, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :date %>
    <%= f.date_select :date, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :location %>
    <%= f.text_area :location, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :number_of_tas %>
    <%= f.number_field :number_of_tas, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :start_time %>
    <%= f.text_field :start_time, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :end_time %>
    <%= f.text_field :end_time, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :meetup_url %>
    <%= f.text_field :meetup_url, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit class: 'btn btn-default' %>
  </div>
<% end %>
