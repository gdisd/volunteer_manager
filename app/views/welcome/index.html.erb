<h1>Welcome to GDI San Diego</h1>

<div class="row">
  <div class="col-md-9">
    <h2>List of Events</h2>
    <table>
      <thead>
        <tr>
          <th>Event name</th>
          <th>Date</th>
          <th>Location</th>
          <th>Number of tas</th>
          <th>Description</th>
          <th>Start time</th>
          <th>End time</th>
          <th>Meetup url</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @events.each do |event| %>
          <tr>
            <td><%= link_to event.event_name, event %></td>
            <td><%= event.date %></td>
            <td><%= event.location %></td>
            <td><%= event.number_of_tas %></td>
            <td><%= event.description %></td>
            <td><%= event.start_time %></td>
            <td><%= event.end_time %></td>
            <td><%= event.meetup_url %></td>
            <td><%= link_to 'Show', event %></td>
            <td><%= link_to 'Edit', edit_event_path(event) %></td>
            <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to "Add Event", new_event_path, class: "btn btn-default" %>
  </div>
  <div class="col-md-3">
    <h2>Sign Up to volunteer</h2>
    <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-default" %>
  </div>
