<p id="notice"><%= notice %></p>

<h1>Applications</h1>

<table class="table-responsive">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>About you</th>
      <th>How you found us</th>
      <th>Why volunteer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @applications.each do |application| %>
      <tr>
        <td><%= application.name %></td>
        <td><%= application.email %></td>
        <td><%= application.about_you %></td>
        <td><%= application.how_you_found_us %></td>
        <td><%= application.why_volunteer %></td>
        <td><%= link_to 'Show', application, class: 'btn btn-sm btn-info' %></td>
        <td><%= link_to 'Edit', edit_application_path(application), class: 'btn btn-sm btn-warning' %></td>
        <td><%= link_to 'Destroy', application, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Application', new_application_path %>
